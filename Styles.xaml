<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Window Style -->
    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="#303030"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>

    <!-- Base Style -->
    <Style x:Key="BaseStyle">
    </Style>

    <!-- Input Styles -->
    <Style TargetType="TextBox" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="Background" Value="#343434"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#606060"/>
    </Style>

    <Style TargetType="PasswordBox" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="Background" Value="#343434"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#606060"/>
    </Style>

    <!-- Button Style -->
    <Style TargetType="Button" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="Background" Value="#404040"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#606060"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Triggers -->
        <Style.Triggers>
            <!-- Hover Background Trigger -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#505050"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="BorderBrush" Value="#606060"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- GrayedOut Text Style -->
    <Style x:Key="GrayedOut" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#606060"/>
    </Style>

    <!-- TotalGradeWrapper -->
    <Style x:Key="TotalGradeWrapper" TargetType="Border">
        <Setter Property="Background" Value="#35353D"/>
    </Style>

    <!-- AdminViewSegmentWrapper -->
    <Style x:Key="AdminViewSegmentWrapper" TargetType="Border">
        <Setter Property="Background" Value="#323232"/>
        <Setter Property="BorderBrush" Value="#404040"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="7,2,7,7"/>
        <Setter Property="CornerRadius" Value="13"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

</ResourceDictionary>
