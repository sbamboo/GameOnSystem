<UserControl x:Class="GameOnSystem.Pages.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOnSystem.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="210"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="EditionTitle" Text="Loading..." FontSize="30" Grid.Column="0" Margin="10,0,0,0"/>

            <DockPanel Grid.Column="2" HorizontalAlignment="Center">
                <Button x:Name="AdminViewBtn" Height="27" FontSize="18" Margin="10,0,10,0" Visibility="Hidden" Click="AdminViewBtnClick">
                    <Button.Content>
                        <TextBlock Text="AdminView" Margin="5,0,5,0"/>
                    </Button.Content>
                </Button>
                <Button Height="27" FontSize="18" Margin="10,0,10,0" Click="LogoutBtnClick">
                    <Button.Content>
                        <TextBlock Text="Logout" Margin="5,0,5,0"/>
                    </Button.Content>
                </Button>
            </DockPanel>

        </Grid>

        <Rectangle Fill="#343434" Grid.Row="1"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="175"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="5,0,2.5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Name="GroupSidebarText" Text="Loading..." FontSize="18" Style="{StaticResource GrayedOutTextBlock}"></TextBlock>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="GroupSidebar" Orientation="Vertical"/>
                </ScrollViewer>
            </Grid>

            <Rectangle Fill="#343434" Grid.Column="1"/>

            <StackPanel x:Name="GroupContentHoldingWrapper" Grid.Column="2" Orientation="Vertical" VerticalAlignment="Stretch">
                <TextBlock x:Name="NoSelectedGroupText" Text="Loading..." FontSize="15" Width="Auto" TextAlignment="Center" Margin="0,40,0,0" Style="{StaticResource GrayedOutTextBlock}"/>
                <ContentControl x:Name="GroupContentHolder"></ContentControl>
            </StackPanel>


        </Grid>
    </Grid>
</UserControl>
