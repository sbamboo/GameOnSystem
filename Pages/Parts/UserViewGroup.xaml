<UserControl x:Class="GameOnSystem.Pages.Parts.UserViewGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOnSystem.Pages.Parts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="#272727" BorderBrush="#2b2b2b" BorderThickness="2" Margin="10" Padding="7">
            <Grid x:Name="GroupDisplay_InnerGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" x:Name="GameLeftWrapper">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.8*"/>
                        <RowDefinition Height="0.3*" x:Name="GameLeftWrapperTitleSegment"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="0" x:Name="GroupGamePresentWrapper" Visibility="Visible"></ContentControl>

                    <TextBlock Grid.Row="1" x:Name="GroupTitle" Text="Loading..." FontSize="24" LayoutUpdated="GroupTitle_LayoutUpdated"/>

                    <TextBlock Grid.Row="2" x:Name="GroupMembers" Text="Loading..." FontSize="16" Style="{StaticResource GrayedOutTextBlock}"></TextBlock>
                </Grid>

                <Rectangle Fill="#343434" Grid.Column="1"/>

                <ScrollViewer Grid.Column="2" ></ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
