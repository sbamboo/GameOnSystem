<UserControl x:Class="GameOnSystem.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOnSystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{StaticResource BaseStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"></RowDefinition>
            <RowDefinition Height="2"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="110"></ColumnDefinition>
                <ColumnDefinition Width="75"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Name="TitleTextBlock" Grid.Column="0" Text="Loading..." FontSize="30" Margin="10,0,0,0"></TextBlock>
            <Button Grid.Column="1" Name="ChangeToAdminView" Content="Show AdminView" Height="25" Width="100" Click="ChangeToAdminView_Click" Visibility="Hidden"/>
            <Button Grid.Column="2" Name="UserView_Logout" Content="Logout" Height="25" Width="50" Click="UserView_Logout_Click"/>
        </Grid>

        <Border Grid.Row="1" Background="#606060"></Border>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="148"></ColumnDefinition>
                <ColumnDefinition Width="2"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Grid.Row="1" Margin="10,0,10,0">
                <TextBlock Name="GroupSelectionTitle" Text="Select Group" FontSize="20"></TextBlock>
                <StackPanel x:Name="GroupSelectionsWrapper" Orientation="Vertical"/>
            </StackPanel>

            <Border Grid.Column="1" Background="#606060"></Border>

            <StackPanel Name="PerGroupContentHolder" Grid.Column="2" Grid.Row="1" Orientation="Vertical" VerticalAlignment="Stretch">
                <TextBlock Name="GroupClickMessage" Text="Click a group on the side to view it." FontSize="15" Width="Auto" TextAlignment="Center" Margin="0,40,0,0" Style="{StaticResource GrayedOut}"/>
            </StackPanel>
        </Grid>


    </Grid>
</UserControl>
